    <Geometry x:Key="IconWindows">M0,0H10V10H0M12,0H22V10H12M0,12H10V22H0M12,12H22V22H12</Geometry>
    <Geometry x:Key="IconHome">M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z</Geometry>
