<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- GEOMETRÍAS DE ICONOS -->

    <!-- Flecha de Borrar (Backspace) -->
    <Geometry x:Key="IconDelete">M22 3H7c-.69 0-1.23.35-1.59.88L0 12l5.41 8.11c.36.53.9.89 1.59.89h15c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-3 12.59L17.59 17 14 13.41 10.41 17 9 15.59 12.59 12 9 8.41 10.41 7 14 10.59 17.59 7 19 8.41 15.41 12 19 15.59z</Geometry>

    <!-- Menú Hamburguesa (3 líneas) -->
    <Geometry x:Key="IconMenu">M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z</Geometry>

    <!-- Logo de Windows (Opcional, por si quieres usarlo en la tecla Win) -->
    <Geometry x:Key="IconWindows">M0,0H10V10H0M12,0H22V10H12M0,12H10V22H0M12,12H22V22H12</Geometry>

    <!-- ICONOS VECTORIALES (Geometry)  -->

    <!-- Icono Home (Casita) -->
    <Geometry x:Key="IconHome">M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z</Geometry>

    <!-- ESTILOS PARA BOTONES DE ICONOS  -->

    <!-- Estilo base para los botones de la barra de título (Menu, Home, Close, Minimize) -->
    <Style x:Key="IconButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="15"/>
        <!-- Redondo -->
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <!-- Efecto hover sutil -->
                <Setter Property="Background" Value="#20888888"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo para el Path (el dibujo) dentro de los botones -->
    <Style x:Key="IconPathStyle" TargetType="Path">
        <Setter Property="Fill" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>




    <!-- Estilo para las teclas (sin cambios) -->
    <Style x:Key="KeyStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource KeyBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="2,3,2,3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Estilo para el texto de las teclas (sin cambios) -->
    <Style x:Key="KeyTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="./Fonts/#Inter"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="SmallKeyTextStyle" BasedOn="{StaticResource KeyTextStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- Estilo para los botones de la barra de título (sin cambios) -->
    <Style x:Key="TitleBarButtonStyle" TargetType="Border">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource KeyForegroundColor}" />
                <Setter Property="Opacity" Value="0.1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo "Aesthetic" para el Menú Desplegable -->
    <Style x:Key="AppContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource KeyBackgroundColor}"/>
        <!-- Usamos el color de texto para el borde, pero muy transparente -->
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <Setter Property="HorizontalOffset" Value="-5"/>
        <Setter Property="VerticalOffset" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8" 
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <!-- Sombra suave -->
                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                        </Border.Effect>
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid>
                        <!-- Borde principal que contiene el texto del menú -->
                        <Border x:Name="Border"
                                Background="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="HasSubMenu" />
                                </Grid.ColumnDefinitions>

                                <!-- Contenido del Header (ej. "Appearance") -->
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>

                                <!-- Flecha que indica que hay un submenú -->
                                <Path x:Name="Arrow" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Data="M 0 0 L 4 4 L 0 8 Z"
                                      Fill="{DynamicResource KeyForegroundColor}"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- ¡ESTA ES LA PARTE CLAVE! El Popup para el submenú -->
                        <Popup x:Name="SubMenuPopup"
                               Placement="Right"
                               IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Focusable="false"
                               AllowsTransparency="true"
                               PopupAnimation="Fade">
                            <!-- El contenedor del submenú, con el mismo estilo del menú principal -->
                            <Border Name="SubmenuBorder"
                                    Background="{DynamicResource KeyBackgroundColor}"
                                    BorderBrush="{DynamicResource KeyBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="2"
                                    SnapsToDevicePixels="True">

                                <ScrollViewer CanContentScroll="True" Style="{StaticResource MenuScrollViewerStyle}">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Triggers para cambiar la apariencia -->
                    <ControlTemplate.Triggers>
                        <!-- Cuando el ratón está encima -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource KeyBackgroundPressedColor}"/>
                            <Setter TargetName="Border" Property="CornerRadius" Value="3"/>
                        </Trigger>
                        <!-- Muestra la flecha si el MenuItem tiene hijos -->
                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ¡ESTILO AÑADIDO! Esta es la corrección -->
    <Style x:Key="AppMenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="Margin" Value="4,6,4,6"/>
    </Style>


    <!-- ESTILO AÑADIDO para el ScrollViewer del menú -->
    <Style x:Key="MenuScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>


    <!-- GEOMETRÍAS PARA LA BARRA DE TÍTULO -->
    <!-- Una línea simple -->
    <Geometry x:Key="IconWindowMinimize">M0,5 H10</Geometry>
    <!-- Una X centrada -->
    <Geometry x:Key="IconWindowClose">M0,0 L10,10 M0,10 L10,0</Geometry>

    <!-- ESTILO NEUMÓRFICO / APPLE MONOCROMO -->
    <Style x:Key="NeumorphicHeaderButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="CornerRadius" Value="8"/>
        <!-- Totalmente redondo -->
        <Setter Property="Background" Value="#15FFFFFF"/>
        <!-- Relleno muy sutil -->
        <Setter Property="BorderBrush" Value="#40FFFFFF"/>
        <!-- Borde sutil tipo cristal -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="6,0,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <!-- Sombra suave para dar profundidad (Neumorfismo) -->
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Direction="270" Color="Black" Opacity="0.4"/>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <!-- Al pasar el ratón: Se vuelve más brillante (Efecto luz) -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#40FFFFFF"/>
                <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            </Trigger>
            <!-- Al presionar: Simula hundirse (cambiando sombra o color) -->
            <Trigger Property="IsMouseOver" Value="True">
                <!-- Opcional: Aquí podrías cambiar la opacidad del icono interno si quisieras -->
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo para el icono dentro del botón (la X y el guion) -->
    <Style x:Key="NeumorphicHeaderIconStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="Stretch" Value="None"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.5"/>
        <!-- Sutil por defecto -->

        <Style.Triggers>
            <!-- Al pasar el mouse sobre el botón padre, el icono se ilumina -->
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                <Setter Property="Opacity" Value="1.0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
    
    
    