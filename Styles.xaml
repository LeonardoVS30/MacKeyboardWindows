    <!-- GLOBAL EASING FUNCTION (Tahoe 26 Style) -->
    <!-- Definido al principio para evitar errores de referencia estática -->
    <QuinticEase x:Key="TahoeEase" EasingMode="EaseOut"/>

    <!-- ESTILOS PARA BOTONES DE ICONOS -->
    <Style x:Key="IconButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#20888888"/>
            </Trigger>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.15" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.15" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="IconPathStyle" TargetType="Path">
        <Setter Property="Fill" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Estilo para las teclas -->
    <Style x:Key="KeyStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource KeyBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="2,3,2,3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="KeyTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="./Fonts/#Inter"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="SmallKeyTextStyle" BasedOn="{StaticResource KeyTextStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="TitleBarButtonStyle" TargetType="Border">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource KeyForegroundColor}" />
                <Setter Property="Opacity" Value="0.1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ESTILO AÑADIDO para el ScrollViewer del menú -->
    <Style x:Key="MenuScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
    </Style>
    <!-- Estilo "Aesthetic" para el Menú Desplegable con Animación Tahoe -->
    <!-- Estilo "Aesthetic Tahoe" para el Menú Desplegable -->
    <Style x:Key="AppContextMenuStyle" TargetType="ContextMenu">
        <!-- AQUI EL CAMBIO DE COLOR: Usamos MenuBackgroundColor -->
        <Setter Property="Background" Value="{DynamicResource MenuBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="HasDropShadow" Value="True"/>
        <!-- Ajuste de posición para que nazca desde el botón -->
        <Setter Property="HorizontalOffset" Value="-10"/>
        <Setter Property="VerticalOffset" Value="5"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border x:Name="MenuBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10" 
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True"
                            RenderTransformOrigin="0,0">
                        <!-- Origen arriba a la izquierda -->

                        <!-- Sombra difusa y elegante -->
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="0.4" Color="Black" Direction="270"/>
                        </Border.Effect>

                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="MenuScale" ScaleX="0.8" ScaleY="0.8"/>
                                <TranslateTransform x:Name="MenuTranslate" Y="-15"/>
                            </TransformGroup>
                        </Border.RenderTransform>

                        <!-- ANIMACIÓN TAHOE (SMOOTH POP) -->
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 1. Opacidad: Entra suavemente -->
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                         From="0" To="1" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- 2. Escala: Efecto de rebote muy sutil (BackEase) -->
                                        <DoubleAnimation Storyboard.TargetName="MenuScale" Storyboard.TargetProperty="ScaleX" 
                                                         To="1" Duration="0:0:0.35">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="MenuScale" Storyboard.TargetProperty="ScaleY" 
                                                         To="1" Duration="0:0:0.35">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- 3. Traslación: Cae a su posición -->
                                        <DoubleAnimation Storyboard.TargetName="MenuTranslate" Storyboard.TargetProperty="Y" 
                                                         To="0" Duration="0:0:0.35">
                                            <DoubleAnimation.EasingFunction>
                                                <CircleEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>

                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Estilo de MenuItem con Checkbox Aesthetic y Submenús Animados -->
    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid>
                        <!-- Elemento del menú principal -->
                        <Border x:Name="Border"
                                Background="Transparent"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="HasSubMenu"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icono Check (Palomita) -->
                                <Path x:Name="CheckIcon" 
                                      Grid.Column="0"
                                      Data="{StaticResource IconCheck}"
                                      Fill="{DynamicResource KeyForegroundColor}"
                                      Stretch="Uniform"
                                      Width="12" Height="12"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Opacity="0">
                                    <Path.Effect>
                                        <DropShadowEffect Color="White" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Path.Effect>
                                </Path>

                                <!-- Texto -->
                                <ContentPresenter Grid.Column="1"
                                                  ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>

                                <!-- Flecha de submenú -->
                                <Path x:Name="Arrow" Grid.Column="2"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Data="M 0 0 L 4 4 L 0 8 Z"
                                      Fill="{DynamicResource KeyForegroundColor}"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- POPUP DEL SUBMENÚ (Aquí aplicamos los cambios) -->
                        <Popup x:Name="SubMenuPopup"
                               Placement="Right"
                               IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Focusable="false"
                               AllowsTransparency="true"
                               PopupAnimation="None">
                            <!-- Desactivamos la animación default para usar la nuestra -->

                            <Border Name="SubmenuBorder"
                                    Background="{DynamicResource MenuBackgroundColor}" 
                                    BorderBrush="{DynamicResource KeyBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="2"
                                    SnapsToDevicePixels="True"
                                    RenderTransformOrigin="0,0">
                                <!-- Origen arriba a la izquierda -->

                                <!-- Sombra Aesthetic -->
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                                </Border.Effect>

                                <!-- Preparación para animación -->
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="SubMenuScale" ScaleX="0.9" ScaleY="0.9"/>
                                        <TranslateTransform x:Name="SubMenuTranslate" X="-10"/>
                                    </TransformGroup>
                                </Border.RenderTransform>

                                <!-- ANIMACIÓN TAHOE PARA SUBMENÚ -->
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <!-- Opacidad -->
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuinticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <!-- Escala (Rebote) -->
                                                <DoubleAnimation Storyboard.TargetName="SubMenuScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="SubMenuScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <!-- Traslación -->
                                                <DoubleAnimation Storyboard.TargetName="SubMenuTranslate" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <QuinticEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <ScrollViewer CanContentScroll="True" Style="{StaticResource MenuScrollViewerStyle}">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource KeyBackgroundPressedColor}"/>
                        </Trigger>
                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckIcon" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AppMenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="Margin" Value="4,6,4,6"/>
    </Style>

    <!-- ESTILO NEUMÓRFICO / APPLE MONOCROMO -->
    <Style x:Key="NeumorphicHeaderButtonStyle" TargetType="Border">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="#15FFFFFF"/>
        <Setter Property="BorderBrush" Value="#40FFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="6,0,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Direction="270" Color="Black" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#40FFFFFF"/>
                <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            </Trigger>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.3" EasingFunction="{StaticResource TahoeEase}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="NeumorphicHeaderIconStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="Stretch" Value="None"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                <Setter Property="Opacity" Value="1.0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>