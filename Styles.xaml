<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo para las teclas (sin cambios) -->
    <Style x:Key="KeyStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource KeyBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="2,3,2,3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Estilo para el texto de las teclas (sin cambios) -->
    <Style x:Key="KeyTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="./Fonts/#Inter"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="SmallKeyTextStyle" BasedOn="{StaticResource KeyTextStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!-- Estilo para los botones de la barra de título (sin cambios) -->
    <Style x:Key="TitleBarButtonStyle" TargetType="Border">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource KeyForegroundColor}" />
                <Setter Property="Opacity" Value="0.1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilos para el Menú (sin cambios) -->
    <Style x:Key="AppContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="{DynamicResource KeyBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource KeyForegroundColor}"/>
        <Setter Property="Padding" Value="2"/>
        <!-- AÑADE ESTE SETTER COMPLETO -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <!-- ItemsPresenter es donde se colocarán los MenuItem -->
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid>
                        <!-- Borde principal que contiene el texto del menú -->
                        <Border x:Name="Border"
                                Background="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="HasSubMenu" />
                                </Grid.ColumnDefinitions>

                                <!-- Contenido del Header (ej. "Appearance") -->
                                <ContentPresenter ContentSource="Header"
                                                  RecognizesAccessKey="True"
                                                  VerticalAlignment="Center"/>

                                <!-- Flecha que indica que hay un submenú -->
                                <Path x:Name="Arrow" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Data="M 0 0 L 4 4 L 0 8 Z"
                                      Fill="{DynamicResource KeyForegroundColor}"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- ¡ESTA ES LA PARTE CLAVE! El Popup para el submenú -->
                        <Popup x:Name="SubMenuPopup"
                               Placement="Right"
                               IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Focusable="false"
                               AllowsTransparency="true"
                               PopupAnimation="Fade">
                            <!-- El contenedor del submenú, con el mismo estilo del menú principal -->
                            <Border Name="SubmenuBorder"
                                    Background="{DynamicResource KeyBackgroundColor}"
                                    BorderBrush="{DynamicResource KeyBorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="2"
                                    SnapsToDevicePixels="True">

                                <ScrollViewer CanContentScroll="True" Style="{StaticResource MenuScrollViewerStyle}">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Triggers para cambiar la apariencia -->
                    <ControlTemplate.Triggers>
                        <!-- Cuando el ratón está encima -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource KeyBackgroundPressedColor}"/>
                            <Setter TargetName="Border" Property="CornerRadius" Value="3"/>
                        </Trigger>
                        <!-- Muestra la flecha si el MenuItem tiene hijos -->
                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ¡ESTILO AÑADIDO! Esta es la corrección -->
    <Style x:Key="AppMenuSeparatorStyle" TargetType="Separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource KeyBorderColor}"/>
        <Setter Property="Margin" Value="4,6,4,6"/>
    </Style>


    <!-- ESTILO AÑADIDO para el ScrollViewer del menú -->
    <Style x:Key="MenuScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
</ResourceDictionary>
    
    
    