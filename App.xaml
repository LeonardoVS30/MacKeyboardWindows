<Application x:Class="MacKeyboardWindows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Colores para tema claro -->
        <Color x:Key="LightKeyColor">#F5F5F7</Color>
        <Color x:Key="LightKeyBorderColor">#D0D0D0</Color>
        <Color x:Key="LightKeyPressedColor">#D6D6D6</Color>
        <Color x:Key="LightSpecialKeyColor">#E8E8E8</Color>
        <Color x:Key="LightTextColor">#000000</Color>
        <Color x:Key="LightBackgroundColor">#FFFFFF</Color>

        <!-- Colores para tema oscuro -->
        <Color x:Key="DarkKeyColor">#2D2D2D</Color>
        <Color x:Key="DarkKeyBorderColor">#404040</Color>
        <Color x:Key="DarkKeyPressedColor">#404040</Color>
        <Color x:Key="DarkSpecialKeyColor">#404040</Color>
        <Color x:Key="DarkTextColor">#FFFFFF</Color>
        <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>

        <!-- Estilos básicos sin colores fijos -->
        <Style x:Key="MacKeyStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="1"/>
        </Style>

        <Style x:Key="MacSpecialKeyStyle" TargetType="Border" BasedOn="{StaticResource MacKeyStyle}">
            <Setter Property="Width" Value="55"/>
        </Style>

        <Style x:Key="MacWideKeyStyle" TargetType="Border" BasedOn="{StaticResource MacKeyStyle}">
            <Setter Property="Width" Value="75"/>
        </Style>

        <Style x:Key="MacExtraWideKeyStyle" TargetType="Border" BasedOn="{StaticResource MacKeyStyle}">
            <Setter Property="Width" Value="95"/>
        </Style>

        <Style x:Key="MacSpaceKeyStyle" TargetType="Border" BasedOn="{StaticResource MacKeyStyle}">
            <Setter Property="Width" Value="250"/>
        </Style>

        <Style x:Key="KeyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SmallKeyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource KeyTextStyle}">
            <Setter Property="FontSize" Value="10"/>
        </Style>
    </Application.Resources>
</Application>